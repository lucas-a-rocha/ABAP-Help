CALL SYS.GET_INSUFFICIENT_PRIVILEGE_ERROR_DETAILS ('<GUID in "insufficient privilege" error>', ?) 

GRANT ABAP_SYS_REPO TO SAPPT1;

GRANT SELECT ON SCHEMA _SYS_REPO TO SAPPT1 WITH GRANT OPTION;

GRANT DELETE ON SCHEMA _SYS_REPO TO SAPPT1 WITH GRANT OPTION;

GRANT UPDATE ON SCHEMA _SYS_REPO TO SAPPT1 WITH GRANT OPTION;

GRANT INSERT ON SCHEMA _SYS_REPO TO SAPPT1 WITH GRANT OPTION;

GRANT EXECUTE ON SCHEMA _SYS_REPO TO SAPPT1 WITH GRANT OPTION;

GRANT EXECUTE ON SCHEMA SAPPT1 TO  _SYS_REPO WITH GRANT OPTION;
